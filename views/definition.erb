<h2>Definition: <%= @definition.text %> </h2>

<form action="/words/<%= @word.id() %>/definitions/<%= @definition.id() %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="name">edit definition</label>
  <input type="text" name="new_def" id="new_def" value="<%= @definition.text %>">
  <button class="btn btn-dark" type="submit" name="button">Update!</button>
</form>
<form class="" action="/words/<%= @word.id() %>/definitions/<%= @definition.id() %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button class="btn btn-dark" type="submit" name="button">Delete definition!</button>
</form>

<a href="/words/<%= @word.id %>>Take me back!</a>
